<%= render 'devise/shared/navigation' %>
<section>
  <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0">
    <div class="w-full bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-500 dark:border-gray-300">
      <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
        <h2 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl">
          Log in
        </h2>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), class:"space-y-4 md:space-y-6") do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
                        <br/>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
                        <br/>
            <%= f.input :remember_me, as: :boolean, class:"text-gray-500 dark:text-gray-300" if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Log in", class:"bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full cursor-pointer" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>