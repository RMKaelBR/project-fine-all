<%= render 'devise/shared/navigation' %>
<section>
  <div class="flex flex-col items-center justify-center mx-auto lg:py-0">
    <div class="w-full bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-400 dark:border-gray-300">
      <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
        <div class="flex w-full justify-between">
          <h2 class="justify-self-start text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl">
            Log in
          </h2>
          <%= link_to "Sign up instead >", new_registration_path(resource_name), class:"button-style justify-self-end rounded-lg inline-block py-1 px-5 bg-gray-200 font-medium hover:text-blue-700 hover:bg-gray-300" %>
        </div>
        

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), class:"space-y-4 md:space-y-6") do |f| %>
          <div class="form-inputs">
            <div class="input-field">
              <%= f.label :email %>
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          label: false,
                          input_html: { autocomplete: "email" } %>
            </div>
            <br/>
            <div class="input-field">
            <%= f.label :password %>
            <%= f.input :password,
                        required: false,
                        label: false,
                        input_html: { autocomplete: "current-password" } %>
            </div>
            <br/>
            <%= f.input :remember_me, as: :boolean, class:"text-gray-500 dark:text-gray-300" if devise_mapping.rememberable? %>
          </div>
          <br/>
          <div class="form-actions">
            <%= f.button :submit, "Log in", class:"bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full cursor-pointer" %>
          </div>
        <% end %>
        <br/>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>