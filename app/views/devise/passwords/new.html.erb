<%= render 'devise/shared/navigation' %>
<section>
  <div class="flex flex-col items-center justify-center mx-auto lg:py-0">
    <div class="w-full bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-400 dark:border-gray-300">
      <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
        <div class="flex w-full justify-between">
          <h2 class="justify-self-start text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl">
            Forgot your password?
          </h2>
        </div>

        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs text-center">
            <%= f.label :email %>
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        label: false,
                        input_html: { autocomplete: "email" } %>
          </div>
          <br/>
          <div class="form-actions text-center">
            <%= f.button :submit, "Send me reset password instructions", class:"bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full cursor-pointer" %>
          </div>
        <% end %>
        <br/>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>