<style>
  table {
    border-collapse: collapse;
    width: 100%;
  }

  th {
    border-bottom: 1px solid #ddd;
  }

  th {
    background-color: #f2f2f2;
  }


  th > a {
    color: black;
  }
</style>

<%= render 'navigation/navigation', class: 'z-50' %>
<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Enrollments</h1>
  </div>

  <table class="table-auto my-8 w-4/5">
    <thead>
      <tr>
        <th class="text-left">
          Course<%# <%= sort_link(@q, :id) %>
        </th>
        <th class="text-left">
          User<%# <%= sort_link(@q, :email) %>
        </th>
        <th>
          Rating
        </th>
        <th>
          Review<%# <%= sort_link(@q, :sign_in_count, "Sign-in Count", default_order: :desc) %>
        </th>
        <th>
          Price<%# <%= sort_link(@q, :current_sign_in_at, 'current_sign_in_at'.humanize, default_order: :desc) %>
        </th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @enrollments.each do |enrollment| %>
        <%# <% if enrollment.user == current_user %>
          <tr>
            <td>
              <%= enrollment.course %>
            </td>
            <td>
              <%=link_to enrollment.user.username, user_path(enrollment.user) %>
            </td>
            <td class="text-center">
              <%= enrollment.rating %>
            </td>
            <td>
              <%= enrollment.review %>
            </td>
            <td class= "text-center">
              <%= number_to_currency(enrollment.price, unit:"â‚±") %>
            </td>
            <td>
              <%= link_to "Show", enrollment, class: "rounded-lg mb-1 px-2 bg-gray-100 inline-block font-medium hover:bg-gray-300" %>
            </td>
            <%# <td>
              <%= link_to 'Edit', edit_enrollment_path(enrollment), class: "rounded-lg mb-1 ml-2 px-2 bg-blue-200 inline-block font-medium hover:text-blue-200 hover:bg-blue-400" %>
            <%# </td> %>
            <td>
              <%= button_to 'Delete', enrollment_path(enrollment), method: :delete, data: {turbo_confirm: "Are you sure?"}, class: "rounded-lg mb-1 ml-2 px-2 bg-red-200 font-medium hover:bg-red-300 hover:text-red-100 deleteColor" %>
            </td>
          </tr>
        <% end %>
      <%# <% end %>
    </tbody>
  </table>
  
  <%# <div id="enrollments" class="min-w-full">
    <%= render @enrollments %>
  <%# </div> %>
</div>
