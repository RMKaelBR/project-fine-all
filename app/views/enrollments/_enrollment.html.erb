<div id="<%= dom_id enrollment %>">
  <div class="flex justify-between">
    <p class="my-5">
      <strong class="block font-medium mb-1">Course:</strong>
      <%= enrollment.course %>
    </p>

    <p class="my-5">
      <strong class="block font-medium mb-1">User:</strong>
      <%= enrollment.user.username %>
    </p>

    <p class="my-5">
      <strong class="block font-medium mb-1">Price:</strong>
      <%= number_to_currency(enrollment.price, unit:"â‚±") %>
    </p>
  </div>

  <p class="my-5">
    <strong class="block font-medium mb-1">Rating:</strong>
    <%= enrollment.rating %> <span class="text-yellow-400"><i class="fa-solid fa-star"></i></span>
  </p>

  <% if enrollment.review.present? %>
    <p class="my-5">
      <strong class="block font-medium mb-1">Review:</strong>
      <%= enrollment.review %>
    </p>
  <% end %>

  

  <% if action_name != "show" %>
    <%= link_to "Show this enrollment", enrollment, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this enrollment', edit_enrollment_path(enrollment), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
