<div>
  <%= render "navigation/navigation" %>
  <h1 class="font-bold text-4xl">User <span class="font-normal"><%= @user.username %></span></h1>
  <h3 class="text-2xl">Roles:</h3>
  <%= simple_form_for @user do |f| %>
    <%= f.collection_check_boxes :role_ids, Role.all, :id, :name %>
    <%= f.error :roles, class: "error-message" %>
    <hr class="my-2">
    <%= f.submit class: "rounded-lg py-2 px-3 bg-blue-600 text-white inline-block font-medium cursor-pointer hover:bg-blue-700 hover:text-yellow-300" %>
  <% end %>
  <%= link_to 'Cancel', users_path, class: "button-style mt-2 rounded-lg py-2 px-3 bg-gray-300 inline-block font-medium cursor-pointer hover:text-blue-700 hover:bg-gray-200" %>
</div>