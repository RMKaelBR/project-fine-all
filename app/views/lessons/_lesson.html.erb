<div id="<%= dom_id lesson %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= link_to lesson do %><%= lesson.title %><% end %>
  </p>

  <% if policy(lesson).show? %>
    <p class="mt-5">
      <strong class="block font-medium mb-1">Content:</strong>
      <%= lesson.content %>
    </p>
  <% end %>
  
  <% unless controller_name == 'courses'%>
    <p class="my-5">
      <strong class="block font-medium mb-1">Course:</strong>
      <%= Course.find(lesson.course_id).title %>
    </p>
  <% end %>

  <% if action_name != "show" %>
    <%= link_to "Show this lesson", lesson, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this lesson', edit_lesson_path(lesson), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
